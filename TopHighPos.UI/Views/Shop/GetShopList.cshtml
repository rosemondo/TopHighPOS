@model List<TopHighPos.Domain.Shops>
@{
    ViewBag.Title = "GetShopList";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">

            <!-- Horizontal Form -->
            <div class="card card-info">
                <div class="card-header">
                    <h6 class="card-title">
                        Shop Management
                    </h6>
                </div>
                <!-- /.card-header -->
                <!-- form start -->

                <div class="card-body">

                    <a class="btn btn-success" style="margin-bottom:10px" id="btnadd" data-toggle="modal" data-target="#shopModal"><i class="fa fa-plus"></i>Add New</a>

                    <div class="table table-responsive">

                        <table class="table table-striped table-bordered" width="100%" id="shopTable">
                            <thead>
                                <tr>
                                    <th>Shop Name</th>
                                    <th>Address</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Mobile</th>
                                    <th>E-mail</th>
                                    <th>Location</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            @foreach (var items in Model)
                            {
                                <tbody>
                                    <tr id="a_@items.shopid">
                                        <td>@items.shopn_name</td>
                                        <td>@items.shop_address</td>
                                        <td>@items.shop_city</td>
                                        <td>@items.shop_state</td>
                                        <td>@items.shop_phone</td>
                                        <td>@items.shop_email</td>
                                        <td>@items.shop_location</td>
                                        <td align="center" valign="middle">
                                            <a class="btn btn-primary btn-sm" onclick="Edit(@items.shopid)"><i class="fa fa-pencil"></i>Edit</a> ||
                                            <a href="@Url.Action("DeleteShop","Shop", new { shopid = items.shopid })" onclick="return confirm('Do you want to delete this record?')" class="btn btn-danger btn-sm" style="margin-left: 5px"><i class="fa fa-trash"></i>Delete</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                            <tfoot>
                                <tr>
                                    <th>Shop Name</th>
                                    <th>Address</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Mobile</th>
                                    <th>E-mail</th>
                                    <th>Location</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>

                </div>

                <!-- /.card-body -->

            </div>

        </div>


    </div>

    @*Product Modal*@
    @using (Html.BeginForm("AddNewShop", "Shop", FormMethod.Post))
    {
        <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="shopModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">New Shop</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <input id="txtId" name="shopid" type="hidden" value="0" />
                                <label>Shop Name</label>
                                <input id="txtshopname" name="shopn_name" type="text" class="form-control" placeholder="Shopname" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-8">
                                <label>Address</label>
                                <input id="txtaddress" name="shop_address" type="text" class="form-control" placeholder="Address" />
                            </div>
                            <div class="col-sm-4">
                                <label>City</label>
                                <input id="txtcity" name="shop_city" type="text" class="form-control" placeholder="City" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label>State</label>
                                <input id="txtstate" name="shop_state" type="text" class="form-control" placeholder="State" />
                            </div>
                            <div class="col-sm-4">
                                <label>Mobile</label>
                                <input id="txtcontact" name="shop_phone" type="text" class="form-control" placeholder="Contect Number" />
                            </div>
                            <div class="col-sm-4">
                                <label>E-mail</label>
                                <input id="txtemail" name="shop_email" type="text" class="form-control" placeholder="E-mail" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Website</label>
                                <input id="txtwebsite" name="shop_website" type="text" class="form-control" placeholder="Website" />
                            </div>
                            <div class="col-sm-6">
                                <label>Location</label>
                                <input id="txtlocation" name="shop_location" type="text" class="form-control" placeholder="Location" />
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="submit" id="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <link href="~/DataTables/DataTables-1.13.8/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />


    @section scripts{

        <script src="~/js_scripts/shop.js"></script>
        <script src="~/DataTables/DataTables-1.13.8/js/jquery.dataTables.min.js"></script>
        <script src="~/DataTables/DataTables-1.13.8/js/dataTables.bootstrap5.min.js"></script>
        <script src="~/Scripts/notify.min.js"></script>


    }

</div>
