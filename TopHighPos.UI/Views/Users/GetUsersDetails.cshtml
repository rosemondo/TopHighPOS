@model List<TopHighPos.Domain.ViewModel.UserViewModel>
@{
    ViewBag.Title = "GetUsersDetails";
}

<link href="~/css/users_css.css" rel="stylesheet" />

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">

            <!-- Horizontal Form -->
            <div class="card card-info">
                <div class="card-header">
                    <h6 class="card-title">
                        User Management
                    </h6>
                </div>
                <!-- /.card-header -->
                <!-- form start -->

                <div class="card-body">

                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal"> <i class="fa fa-plus"></i> Add New</button><br /><br />

                    <div class="table table-responsive">

                        <table class="table table-striped table-bordered" id="usersTable">

                            <thead>
                                <tr>
                                    <th>E-mail</th>
                                    <th>Roles</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            @foreach (var items in Model)
                            {
                                <tbody>
                                    <tr id="a_@items.id">
                                        <td>@items.email_address</td>
                                        <td>@items.roles</td>
                                        <td align="center" valign="middle">
                                            <a class="btn btn-primary btn-sm" onclick="Edit(@items.id)"><i class="fa fa-pencil"></i>Edit</a> || 
                                            <a href="@Url.Action("DeleteUser","Users")/@items.id" onclick="return confirm('Do you want to delete this record?')" class="btn btn-danger btn-sm" style="margin-left: 5px"><i class="fa fa-trash"></i>Delete</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                            <tfoot>
                                <tr>
                                    <th>E-mail</th>
                                    <th>Roles</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
                <!-- /.card-body -->

            </div>

        </div>


    </div>

    @using (Html.BeginForm("AddNewUser", "Users", FormMethod.Post))
    {
        <div id="myModal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">New Users</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input id="txtRoleId" type="hidden" />
                            <input id="txtId" name="id" type="hidden" />
                            <label>Username</label>
                            <input id="txtemail" name="email_address" type="email" class="form-control" placeholder="Enter your e-mail" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input id="txtpassword" name="password" type="password" class="form-control" placeholder="Enter your password" />
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <label>Role</label>
                                <select id="ddroles" name="rolesid" class="form-control" required="required" style="width:100%">
                                    <option></option>

                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }


    <link href="~/DataTables/DataTables-1.13.8/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    @section scripts{

        <script src="~/js_scripts/users.js"></script>
        <script src="~/DataTables/DataTables-1.13.8/js/jquery.dataTables.min.js"></script>
        <script src="~/DataTables/DataTables-1.13.8/js/dataTables.bootstrap5.min.js"></script>
        <script src="~/Scripts/notify.min.js"></script>

    }

</div>

