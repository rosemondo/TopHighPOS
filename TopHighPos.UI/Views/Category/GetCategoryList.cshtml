@model List<TopHighPos.Domain.Categories>
@{
    ViewBag.Title = "GetCategoryList";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">

            <!-- Horizontal Form -->
            <div class="card card-info">
                <div class="card-header">
                    <h6 class="card-title">
                        Categories Management
                    </h6>
                </div>
                <!-- /.card-header -->
                <!-- form start -->

                <div class="card-body">

                    <a class="btn btn-success" style="margin-bottom:10px" id="btnadd" data-toggle="modal" data-target="#categoryModal"><i class="fa fa-plus"></i>Add New</a>

                    <div class="table table-responsive">

                        <table class="table table-striped table-bordered" width="100%" id="categoryTable">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            @foreach (var items in Model)
                            {
                                <tbody>
                                    <tr id="a_@items.catid">
                                        <td>@items.cate</td>
                                        <td align="center" valign="middle">
                                            <a class="btn btn-primary btn-sm" onclick="Edit(@items.catid)"><i class="fa fa-pencil"></i>Edit</a> ||
                                            <a href="@Url.Action("DeleteCategory","Category", new { id = items.catid })" onclick="return confirm('Do you want to delete this record?')" class="btn btn-danger btn-sm" style="margin-left: 5px"><i class="fa fa-trash"></i>Delete</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                            <tfoot>
                                <tr>
                                    <th>Category</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>

                </div>

                <!-- /.card-body -->

            </div>

        </div>


    </div>

    @*Product Modal*@
    @using (Html.BeginForm("AddNewCategory", "Category", FormMethod.Post))
    {
        <div id="categoryModal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">New Category</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input id="txtId" name="catid" type="hidden" value="0" />
                            <label>Category Name</label>
                            <input id="txtcategory" name="cate" type="text" class="form-control" placeholder="Enter category" />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" id="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <link href="~/DataTables/DataTables-1.13.8/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />


    @section scripts{

        <script src="~/js_scripts/category.js"></script>
        <script src="~/DataTables/DataTables-1.13.8/js/jquery.dataTables.min.js"></script>
        <script src="~/DataTables/DataTables-1.13.8/js/dataTables.bootstrap5.min.js"></script>
        <script src="~/Scripts/notify.min.js"></script>


    }

</div>
